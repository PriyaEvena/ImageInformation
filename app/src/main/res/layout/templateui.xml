<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/ModelLt"
    android:background="@drawable/square_corners"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:orientation="vertical">

    <TextView
        android:id="@+id/ModelTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:gravity="center"
        android:textColor="#000000"
        android:textSize="20dp"
        android:textStyle="bold"
        tools:text="Travel" />
<ImageView
    android:id="@+id/ModelImg"
    android:layout_width="match_parent"
    android:layout_height="220dp"
    android:scaleType="fitXY"
    android:src="@drawable/travel_001" />

    <TextView
        android:id="@+id/ModelDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:gravity="center"
        android:textColor="#000000"
        android:textSize="15dp"
        tools:text="Our most comprehensive model with concepts, objects, scenes, and more" />
</LinearLayout>
